[color]
white = #FFFFFF
red = #e53935
light_green = #28bd6b
dunno = #5c889c
shade1 = #0f111a
bground = #0f111a
fground = #f7f7f7
accent = #31323a
modulefg = #f7f7f7
modulefg-alt = #f7f7f7


[bar/main]
monitor = eDP1
dpi = 192
width = 100%
height = 22
include-file = ~/.config/polybar/fullbar
background = ${color.bground}
foreground = ${color.fground}
overline-size = 0
overline-color = ${color.accent}
modules-left = workspaces title
modules-center =
modules-right = Playing temp battery volume backlight wifi weather date

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;temp, battery, sound, light, wifi, time, weather, time


[module/Playing]
type = custom/script
exec = ~/.config/bin/playing.sh
format-prefix = " "
interval = 0
label-font = 0
click-left = sp play
format-padding = 1


[module/temp]
type = custom/script
exec = ~/.config/bin/System_temp.sh
format-prefix = "  "
label = %output%
format-prefix-foreground = ${color.red}


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC90
poll-interval = 0
;;ramp-capacity-foreground = ${color.dunno}
format-discharging = | <ramp-capacity> <label-discharging>
format-full =| <ramp-capacity> <label-full>
format-charging =| <animation-charging> <label-charging>
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

[module/volume]
type = internal/alsa
format-volume =| <ramp-volume> <label-volume>
format-muted = 0%
ramp-volume-0 =
ramp-volume-1 =
ramp-volume-2 =


[module/backlight]
type = custom/script
exec = ~/.config/bin/light.sh
scroll-up = exec light -A 5
scroll-down = exec light -U 5
update-interval = 1
format-prefix = "| "
label = "%output% |"


[module/wifi]
type = internal/network
interface =wlp6s0
format-connected =<label-connected>
label-connected-foreground = ${color.dunno}
label-connected =""
format-disconnected =<label-disconnected>
label-disconnected =not connected


[module/eth]
type = internal/network
interface =enp7s0
format-connected =<label-connected>
label-connected-foreground = ${color.dunno}
label-connected ="| "
format-disconnected =<label-disconnected>
label-disconnected =not connected


[module/weather]
type = custom/script
exec = ~/.config/bin/weather.sh
format-prefix = "| "
label = %output%


[module/date]
type = internal/date
time = %H:%M
time-alt = %a %d %b
label ="| %time% "


[module/title]
type = internal/xwindow
format = <label>
format-padding = 1
label = " %title%"
label-maxlen = 30
label-empty = " Arch Linux"


[module/workspaces]
type = internal/bspwm
pin-workspaces = false
enable-click = true
enable-scroll = true
format = <label-state>
format-background = ${color.shade1}
format-foreground = ${color.shade1}
label-monitor = %name%
label-focused-foreground = ${color.dunno}
label-occupied-foreground = ${color.accent}
label-urgent-foreground = ${color.red}
label-empty-foreground = ${color.modulefg-alt}
label-focused-padding = 1
label-urgent-padding = 1
label-occupied-padding = 1
label-empty-padding = 1
